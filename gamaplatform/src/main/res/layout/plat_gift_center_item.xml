<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px_200"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_10"
        android:gravity="center">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/plat_gift_center_image_view"
            android:layout_gravity="center"
            android:layout_width="@dimen/px_160"
            android:layout_height="@dimen/px_160"
            android:layout_marginTop="@dimen/px_25"
            fresco:placeholderImage="@drawable/plat_default_loading"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_5"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/plat_gift_center_get_statue"
            android:textSize="@dimen/px_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/plat_gift_center_time"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:textSize="@dimen/px_20" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/plat_gift_center_title"
            android:textSize="@dimen/px_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/plat_gift_center_des"
            android:textSize="@dimen/px_20" />

    </LinearLayout>
</LinearLayout>
