<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_sdk_bg">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="286dp"
        android:background="@mipmap/sdk_bg_view"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />

        <!-- 登入方式 -->
        <LinearLayout
            android:id="@+id/layout_guest_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/sdk_btn3_corners25_bg"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_login_guset" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="@string/guest_login_btn"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_go_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/tips_have_account"
                android:textColor="@color/c_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/py_login"
                android:textColor="@color/c_F13A12"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="26dp"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:gravity="center_vertical"
                android:text="@string/text_login_other"
                android:textColor="@color/c_C0C0C0"
                android:textSize="11sp" />

            <View
                android:layout_width="26dp"
                android:layout_height="1dp"
                android:background="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_login_fb"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/icon_fb_1" />

            <ImageView
                android:id="@+id/iv_login_google"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="27dp"
                android:src="@mipmap/icon_gp_1" />

            <ImageView
                android:id="@+id/iv_login_line"
                android:layout_width="34dp"

                android:layout_height="34dp"
                android:layout_marginStart="27dp"
                android:src="@mipmap/icon_line_bg_1" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:id="@+id/layout_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agree_term"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/mw_term_checkbox_selector"
                    android:button="@null" />

                <LinearLayout
                    android:id="@+id/layout_go_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/text_i_agree_tips"
                        android:textColor="@color/c_text"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/text_term_moqie"
                        android:textColor="@color/c_F13A12"

                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_delete_account2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/mw_delete_account_bg_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"
        android:paddingRight="13dp"
        android:paddingBottom="5dp">


        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/img_garbage_del" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/text_delete_account"
            android:textColor="@color/black_s"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>