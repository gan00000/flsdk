<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/rl_sdk_input_view"
    android:background="@drawable/sdk_bg_input"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="15dp"
        >

        <ImageView
            android:id="@+id/sdk_input_item_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/mw_account_icon"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:background="@color/c_C0C0C0"
            android:id="@+id/sdk_input_item_line1"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/px_4"
            android:maxLines="1"
            android:textSize="@dimen/sp_24"
            android:text="@string/py_vfcode"
            android:textColor="@color/e_ff3e37"
            android:id="@+id/sdk_input_item_lable"
            android:visibility="gone"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/py_msg_account_hint"
            android:id="@+id/sdk_input_item_et"
            android:background="@null"
            android:textSize="14sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/white_c"
            android:textColorHint="@color/c_848484"
            />


        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:id="@+id/sdk_input_item_eye_layout"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/gama_eye_selector_v2"
                android:scaleType="fitCenter"
                android:id="@+id/sdk_input_item_eye"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:id="@+id/sdk_input_item_account_history"
            android:visibility="gone"
            android:gravity="center">

            <ImageView

                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="@dimen/px_4"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:id="@+id/iv_account_history"
                android:src="@drawable/iv_selector_account_more"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:id="@+id/sdk_input_item_bottom_line"
        android:background="@color/c_C0C0C0"/>

</RelativeLayout>