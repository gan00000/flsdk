<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="468dp"
        android:background="@drawable/pc_float_content_bg_port"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/id_rv_float_left"
            android:background="@color/c_EDEDED"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/id_ll_float_right_content"
                android:orientation="vertical">

                <com.mw.sdk.act.FloatPersionCenterView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/id_FloatPersionCenterView"
                    />

            </LinearLayout>

            <com.mw.sdk.widget.SWebView
                android:id="@+id/id_swv_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </LinearLayout>
    
    <ImageView
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:src="@mipmap/float_back_up"
        android:id="@+id/id_iv_float_back"
        />

</LinearLayout>
