                     android:textColor="@android:color/white"
                     android:textSize="@dimen/sp_14"
                     android:textStyle="bold"
                     android:layout_marginLeft="@dimen/px_20"
                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/py_login_go_bindFb_v2"
                     android:text="@string/py_bind_fb"
                     android:textColor="@android:color/white"
                     android:textSize="@dimen/sp_14"
                     android:textStyle="bold"
                     android:layout_marginLeft="@dimen/px_20"
                     />-->

                <TextView
                    android:id="@+id/py_login_go_reg_v2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:text="@string/py_register_account"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/py_login_go_account_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:text="@string/py_account_center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

