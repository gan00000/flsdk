        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/py_left_bottom_id"
                android:layout_width="@dimen/px_120"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>


