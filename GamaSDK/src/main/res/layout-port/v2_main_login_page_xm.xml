<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_xm_google_login_iv"
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_269"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_xm_google_login" />

            <!--<ImageView
                android:layout_width="@dimen/px_334"
                android:layout_height="@dimen/px_300"
                android:src="@drawable/btn_xm_facebook_login"
                android:scaleType="centerCrop"
                android:id="@+id/btn_xm_facebook_login_iv"
                />-->
            <ImageView
                android:id="@+id/btn_xm_member_login_iv"
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_269"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_xm_member_login"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_xm_facebook_login_iv"
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_200"
                android:background="@drawable/gama_fb_login_bg"
                android:paddingTop="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:scaleType="centerInside"
                android:src="@drawable/gama_fb_login" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_xm_guest_login_iv"
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_200"
                android:background="@drawable/gama_guest_login_bg"
                android:paddingTop="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:scaleType="centerInside"
                android:src="@drawable/gama_guest_login" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>