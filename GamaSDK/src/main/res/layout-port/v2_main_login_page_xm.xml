<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.44"/>


        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.62"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.64"/>

        <android.support.constraint.Guideline
            android:id="@+id/gama_mainpage_guideline11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78"/>

        <ImageView
            android:id="@+id/btn_xm_google_login_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_xm_google_login"
            app:layout_constraintTop_toTopOf="@id/gama_mainpage_guideline1"
            app:layout_constraintBottom_toBottomOf="@id/gama_mainpage_guideline6"
            app:layout_constraintStart_toStartOf="@id/gama_mainpage_guideline3"
            app:layout_constraintEnd_toEndOf="@id/gama_mainpage_guideline5"/>

        <ImageView
            android:id="@+id/btn_xm_member_login_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_xm_member_login"
            app:layout_constraintTop_toTopOf="@id/gama_mainpage_guideline1"
            app:layout_constraintBottom_toBottomOf="@id/gama_mainpage_guideline6"
            app:layout_constraintStart_toStartOf="@id/gama_mainpage_guideline5"
            app:layout_constraintEnd_toEndOf="@id/gama_mainpage_guideline4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gama_fb_login_bg"
            app:layout_constraintTop_toTopOf="@id/gama_mainpage_guideline6"
            app:layout_constraintBottom_toBottomOf="@id/gama_mainpage_guideline7"
            app:layout_constraintStart_toStartOf="@id/gama_mainpage_guideline3"
            app:layout_constraintEnd_toEndOf="@id/gama_mainpage_guideline4"/>

        <ImageView
            android:id="@+id/btn_xm_facebook_login_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/gama_fb_login"
            app:layout_constraintTop_toTopOf="@id/gama_mainpage_guideline8"
            app:layout_constraintBottom_toBottomOf="@id/gama_mainpage_guideline9"
            app:layout_constraintStart_toStartOf="@id/gama_mainpage_guideline3"
            app:layout_constraintEnd_toEndOf="@id/gama_mainpage_guideline4"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gama_guest_login_bg"
            app:layout_constraintTop_toTopOf="@id/gama_mainpage_guideline7"
            app:layout_constraintBottom_toBottomOf="@id/gama_mainpage_guideline2"
            app:layout_constraintStart_toStartOf="@id/gama_mainpage_guideline3"
            app:layout_constraintEnd_toEndOf="@id/gama_mainpage_guideline4" />

        <ImageView
            android:id="@+id/btn_xm_guest_login_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/gama_guest_login"
            app:layout_constraintTop_toTopOf="@id/gama_mainpage_guideline10"
            app:layout_constraintBottom_toBottomOf="@id/gama_mainpage_guideline11"
            app:layout_constraintStart_toStartOf="@id/gama_mainpage_guideline3"
            app:layout_constraintEnd_toEndOf="@id/gama_mainpage_guideline4" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>