<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/login_cons_bg"
        >

        <include
            layout="@layout/gama_ui_head_layout"
            />


        <ImageView
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:src="@drawable/sdk_btn_bdyk"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"

            android:id="@+id/gama_manager_btn_guest"
            />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:src="@drawable/sdk_btn_bd_google"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:id="@+id/gama_manager_btn_google"
            />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:src="@drawable/sdk_btn_bdfb"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:id="@+id/gama_manager_btn_facebook"
            />



    </LinearLayout>


</RelativeLayout>