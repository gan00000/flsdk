<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/sdk_input_item_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="@dimen/px_20"
        android:scaleType="fitCenter"
        android:src="@drawable/fl_sdk_dx"

        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/px_4"
        android:maxLines="1"
        android:textSize="@dimen/sp_24"
        android:text="@string/py_vfcode"
        android:textColor="@color/e_ff3e37"
        android:id="@+id/sdk_input_item_lable"
        android:visibility="gone"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:paddingStart="@dimen/px_6"
        android:paddingEnd="@dimen/px_20"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/py_msg_account_hint"
        android:id="@+id/sdk_input_item_et"
        android:background="@null"
        android:textSize="14sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
       />


    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="@dimen/px_20"
        android:src="@drawable/gama_eye_selector_v2"
        android:scaleType="fitCenter"
        android:id="@+id/sdk_input_item_eye"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:id="@+id/sdk_input_item_account_history"
        android:visibility="gone"
        android:gravity="center">

        <ImageView

            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/px_4"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/sdk_list_down"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>


</LinearLayout>