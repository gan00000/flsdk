<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_select_pay_channel">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:id="@+id/ll_select_channel"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/sdk_bg_select_pay_channel_2"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_select_channel_gg"
                        android:layout_width="116dp"
                        android:layout_height="38dp"
                        android:text="@string/py_confire"
                        android:background="@drawable/bg_pay_gg"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                </LinearLayout>


                <Button
                    android:id="@+id/iv_select_channel_other"
                    android:layout_width="116dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/sdk_bg_select_pay_channel_1"
                    android:gravity="center"
                    android:text="@string/text_other"
                    android:textColor="@android:color/white"
                    android:textSize="17sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_select_channel"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mw_bg_select_channel_tips"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_select_pay_channel" />

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_select_channel_close"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_select_channel_close" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>