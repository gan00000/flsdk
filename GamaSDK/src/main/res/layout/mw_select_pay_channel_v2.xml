<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_s">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="365dp"
        android:layout_centerInParent="true"
        android:background="@drawable/mw_bg_white_20_2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_select_channel_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_official_channel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/black_s" />

            <ImageView
                android:id="@+id/iv_select_channel_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_select_channel_close" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/c_B3B3B3"
            android:layout_marginTop="5dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            >

            <ImageView
                android:id="@+id/iv_select_channel_appicon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/bg_select_channel_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_select_channel_uid"
                android:text="uid:"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/iv_select_channel_appicon"
                android:layout_marginStart="14dp"
                android:textColor="@color/black_s" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_select_channel_amount"
                android:text="HK:"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/c_F43F3F" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/c_B3B3B3"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:id="@+id/mw_rv_select_paychannel"
            />



    </LinearLayout>
    



</RelativeLayout>