<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="@dimen/px_900"
        android:layout_height="@dimen/px_600"
        android:layout_centerInParent="true"
        android:background="@drawable/v2_login_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:layout_marginTop="@dimen/px_15">

            <include layout="@layout/v2_login_back_layout"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/px_15"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_80"
                android:background="@drawable/v2_editetext_view_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/v2_bg_icon_account"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_15"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="@string/py_account_hit"
                    android:textSize="@dimen/sp_18"
                    android:id="@+id/py_register_account"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_15"
                android:background="@drawable/v2_editetext_view_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/v2_bg_icon_pwd"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="@dimen/px_15"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="@string/py_password_hit"
                    android:textSize="@dimen/sp_18"
                    android:id="@+id/py_register_password"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/px_600"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_15"
                android:background="@drawable/v2_editetext_view_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_30"
                android:paddingRight="@dimen/px_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/v2_bg_icon_account"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_15"
                    android:maxLines="1"
                    android:background="@null"
                    android:hint="user id"
                    android:textSize="@dimen/sp_18"
                    android:id="@+id/py_register_account_uid"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_35">

            <!--<Button-->
                <!--android:layout_width="@dimen/px_420"-->
                <!--android:layout_height="@dimen/px_60"-->
                <!--android:background="@drawable/v2_login_sure"-->
                <!--android:id="@+id/py_register_account_confirm"/>-->

            <TextView
                android:layout_width="@dimen/px_420"
                android:layout_height="@dimen/px_60"
                android:id="@+id/py_register_account_confirm"
                android:text="@string/py_confire"
                android:textStyle="bold"
                android:textSize="@dimen/sp_24"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_192d3f_46" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>