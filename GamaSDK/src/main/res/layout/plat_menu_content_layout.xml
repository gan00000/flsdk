<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <include layout="@layout/plat_menu_content_title_layout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:layout_marginLeft="@dimen/px_12"
            android:layout_marginRight="@dimen/px_12"
            android:background="@android:color/white" />

        <include layout="@layout/plat_menu_content_swipe_ref_layout" />


    </LinearLayout>


    <!--我的序号中心-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/px_10"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20"
        android:visibility="gone"
        android:id="@+id/plat_my_serial_number_layout"
        android:background="@drawable/plat_my_serial_number_bg"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plat_my_serial_number"
            android:textSize="@dimen/sp_24"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/px_4"
            android:layout_margin="@dimen/px_10"
            android:textColor="@android:color/white"

            />


    </LinearLayout>


</RelativeLayout>
