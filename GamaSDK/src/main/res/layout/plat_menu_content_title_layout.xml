<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_80"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="@dimen/px_100"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:id="@+id/plat_title_back_tv"
        android:visibility="gone"
        android:gravity="center">

        <ImageView

            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:src="@drawable/plat_title_back_bg" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_30"
        android:id="@+id/plat_title_tv"
        android:layout_centerInParent="true"
        />


    <LinearLayout
        android:layout_width="@dimen/px_100"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/plat_title_close_tv"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_40"
            android:scaleType="centerCrop"
            android:src="@drawable/plat_title_close" />

    </LinearLayout>


</RelativeLayout>