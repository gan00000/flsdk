<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="272dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/id_layout_del_account"
    android:background="@color/c_delete_view_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"

        >
        <ImageView
            android:id="@+id/iv_update_account_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/nend_update_account_bg" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="13sp"
            android:text="@string/text_delete_account_tips"
            android:textColor="@color/white_c"
            android:id="@+id/sdk_input_item_lable"

            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        >


        <Button
            android:id="@+id/btn_delete_cancel"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="@drawable/mw_delete_bg"
            android:gravity="center"
            android:text="@string/text_cancel"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_delete_confirm"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:background="@drawable/mw_bg_f23b12_50"
            android:layout_marginStart="22dp"
            android:gravity="center"
            android:text="@string/text_confire"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>