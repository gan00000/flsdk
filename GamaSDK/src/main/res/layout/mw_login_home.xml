<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_sdk_bg">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="667dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_marginTop="168dp"
            android:src="@mipmap/mw_logo" />

        <!-- 登入方式 -->
        <LinearLayout
            android:id="@+id/layout_guest_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/mw_btn_bg_f23a12"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="85dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/guse_login_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="@string/guest_login_btn"
                android:textColor="@android:color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:id="@+id/layout_go_account_login"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/tips_have_account"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/py_login"
                android:textColor="@color/c_F13A12"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="26dp"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:gravity="center_vertical"
                android:text="@string/text_login_other"
                android:textColor="@color/c_C0C0C0"
                android:textSize="11sp" />

            <View
                android:layout_width="26dp"
                android:layout_height="1dp"
                android:background="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_login_fb"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/mw_fb_icon" />

            <ImageView
                android:id="@+id/iv_login_google"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="27dp"
                android:src="@mipmap/mw_gp_icon" />

            <ImageView
                android:id="@+id/iv_login_line"
                android:layout_width="28dp"

                android:layout_height="28dp"
                android:layout_marginStart="27dp"
                android:src="@mipmap/mw_line_icon" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agree_term"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/mw_term_checkbox_selector"
                    android:button="@null" />

            <LinearLayout
                android:id="@+id/layout_go_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/text_i_agree_tips"
                    android:textColor="@color/c_C0C0C0"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/text_term_moqie"
                    android:textColor="@android:color/white"

                    android:textSize="10sp" />

            </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>