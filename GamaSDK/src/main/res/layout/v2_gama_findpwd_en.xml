<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_title_layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_child_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_child_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_account_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_account_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_phone_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_phone_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_button_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_button_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.61" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_icon_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32" />

        <android.support.constraint.Guideline
            android:id="@+id/gama_find_guideline_icon_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <!--<android.support.constraint.Guideline-->
            <!--android:id="@+id/gama_find_guideline_eye_start"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical"-->
            <!--app:layout_constraintGuide_percent="0.76" />-->

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/gama_ui_bg_port"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_guideline_bottom"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_right"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_left"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_top" />

        <include
            layout="@layout/gama_ui_head_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/gama_find_guideline_title_layout_bottom"
            app:layout_constraintEnd_toStartOf="@+id/gama_find_guideline_right"
            app:layout_constraintStart_toStartOf="@+id/gama_find_guideline_left"
            app:layout_constraintTop_toTopOf="@+id/gama_find_guideline_top" />

        <TextView
            android:id="@+id/gama_find_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/en_py_login_page_forgot_pwd"
            android:textColor="@color/gama_color_ui_head_title"
            android:textSize="@dimen/sp_27"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/gama_find_guideline_account_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_title_top"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/gama_find_layout_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gama_ui_input_bg"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_guideline_account_bottom"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_child_right"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_child_left"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_account_top" />

        <ImageView
            android:id="@+id/gama_find_iv_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/gama_ui_icon_account_en"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_guideline_account_bottom"
            app:layout_constraintDimensionRatio="206:97"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_icon_end"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_icon_start"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_account_top" />

        <EditText
            android:id="@+id/gama_find_et_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:hint="@string/en_py_register_account_hit"
            android:inputType="text"
            android:maxLines="1"
            android:padding="4dp"
            android:textColor="@color/gama_color_ui_input_text"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_iv_account"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_child_right"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_icon_end"
            app:layout_constraintTop_toTopOf="@id/gama_find_iv_account" />

        <ImageView
            android:id="@+id/gama_find_layout_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gama_ui_input_bg"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_guideline_phone_bottom"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_child_right"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_child_left"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_phone_top" />

        <ImageView
            android:id="@+id/gama_find_iv_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/gama_ui_icon_email_en"
            app:layout_constraintDimensionRatio="206:97"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_guideline_phone_bottom"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_icon_end"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_icon_start"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_phone_top" />

        <EditText
            android:id="@+id/gama_find_et_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:background="@null"
            android:hint="@string/en_py_register_account_hit"
            android:inputType="text"
            android:maxLines="1"
            android:padding="4dp"
            android:textColor="@color/gama_color_ui_input_text"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/sp_14"
            android:imeOptions="actionDone"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_iv_email"
            app:layout_constraintEnd_toEndOf="@id/gama_find_guideline_child_right"
            app:layout_constraintStart_toStartOf="@id/gama_find_guideline_icon_end"
            app:layout_constraintTop_toTopOf="@id/gama_find_iv_email" />


        <Button
            android:id="@+id/gama_find_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_192d3f_46"
            android:gravity="center"
            android:text="@string/en_py_confire"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintDimensionRatio="8:1"
            app:layout_constraintBottom_toBottomOf="@id/gama_find_guideline_button_bottom"
            app:layout_constraintEnd_toStartOf="@id/gama_find_guideline_child_right"
            app:layout_constraintStart_toEndOf="@id/gama_find_guideline_child_left"
            app:layout_constraintTop_toTopOf="@id/gama_find_guideline_button_top" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>