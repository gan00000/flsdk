<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_centerInParent="true"
                  android:background="@android:color/white"
                  android:orientation="vertical"
                  android:gravity="center_vertical"
    >

        <!--标题-->
        <!--<include layout="@layout/py_title_layout"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:background="@drawable/v2_bg_toolbar"
            >

            <LinearLayout android:layout_width="@dimen/px_100"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:id="@+id/py_back_button"
                >
s
                <ImageView android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/py_back_button"

                    />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/py_login_terms"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/sp_30"
                android:textColor="@android:color/white"
                android:id="@+id/py_title_id"
                />

        </RelativeLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:paddingRight="@dimen/px_36"
                      android:paddingLeft="@dimen/px_36"
                      android:layout_centerInParent="true"
                      android:orientation="vertical"
                      android:gravity="center_horizontal">

            <ScrollView android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"

            >

                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/py_terms_text_id"
                          android:textColor="@android:color/black"
                />

            </ScrollView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>