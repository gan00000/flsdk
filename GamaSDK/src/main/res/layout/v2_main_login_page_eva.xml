<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_google_login"
                android:layout_width="@dimen/px_334"
                android:layout_height="@dimen/px_300"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_xm_google_login" />

            <ImageView
                android:id="@+id/iv_gama_login"
                android:layout_width="@dimen/px_334"
                android:layout_height="@dimen/px_300"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_xm_member_login" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_evatar_login"
                android:layout_width="@dimen/px_334"
                android:layout_height="@dimen/px_600"
                android:background="@android:color/darker_gray"
                android:paddingLeft="@dimen/px_100"
                android:paddingRight="@dimen/px_100"
                android:scaleType="centerInside" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_facebook_login"
                android:layout_width="@dimen/px_334"
                android:layout_height="@dimen/px_300"
                android:scaleType="centerInside"
                android:padding="20dp"
                android:background="@drawable/gama_fb_login_bg"
                android:src="@drawable/gama_fb_login" />

            <ImageView
                android:id="@+id/iv_free_login"
                android:layout_width="@dimen/px_334"
                android:layout_height="@dimen/px_300"
                android:scaleType="centerInside"
                android:padding="20dp"
                android:background="@drawable/gama_guest_login_bg"
                android:src="@drawable/gama_guest_login" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>