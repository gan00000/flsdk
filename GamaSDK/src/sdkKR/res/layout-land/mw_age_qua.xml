<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_sdk_bg">

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="184dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/mw_bg_white_6"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_age_up"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/text_age_is_up14"
            android:textColor="#ff000000"
            android:textSize="16sp"
            android:lines="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_age_up14_can_useapp"
            android:textColor="#ffff0000"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button

                android:id="@+id/btn_age_close"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/mw_bg_white_15"
                android:gravity="center"
                android:text="@string/text_close"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button

                android:id="@+id/btn_age_ok"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/sdk_btn3_corners25_bg"
                android:gravity="center"
                android:text="@string/text_age_up14"
                android:textColor="@android:color/white"
                android:textSize="12sp" />


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>