<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/demo_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="设置语言" />

                <Button
                    android:id="@+id/demo_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆" />

                <Button
                    android:id="@+id/demo_pay_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="google储值:com.game.superand.1usd" />

                <Button
                    android:id="@+id/demo_pay_google2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="google储值:com.game.superand.2usd" />

                <Button
                    android:id="@+id/web_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网页储值" />

                <Button
                    android:id="@+id/track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="事件上报" />
                <Button
                    android:id="@+id/openScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="弹出评分" />

                <Button
                    android:id="@+id/goDownLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="弹出评分(跳到商店)" />


                <Button
                    android:id="@+id/demo_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="分享url1" />
                <Button
                    android:id="@+id/demo_share2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fb分享url" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登出" />

                <Button
                    android:id="@+id/bindphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示绑定手机view" />

                <Button
                    android:id="@+id/updateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升级账号view" />

                <Button
                    android:id="@+id/share_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line分享" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
