<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/demo_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="设置语言" />

                <Button
                    android:id="@+id/demo_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆" />

                <Button
                    android:id="@+id/demo_pay_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="google储值test" />

                <Button
                    android:id="@+id/demo_pay_hw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="huawei储值test" />

                <Button
                    android:id="@+id/web_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网页储值test" />

                <Button
                    android:id="@+id/web_pay_qooapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="qooapp储值test" />

                <Button
                    android:id="@+id/track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="事件上报" />
                <Button
                    android:id="@+id/openScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="弹出评分" />

                <Button
                    android:id="@+id/goDownLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="弹出评分(跳到商店)" />


                <Button
                    android:id="@+id/demo_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享url1" />

                <Button
                    android:id="@+id/share_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="line分享" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换账号登录" />

                <Button
                    android:id="@+id/bindphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="显示绑定手机view" />

                <Button
                    android:id="@+id/updateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升级账号view" />

                <Button
                    android:id="@+id/cs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开客服页面" />

                <Button
                    android:id="@+id/checkGoogleServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查Google服务" />

                <Button
                    android:id="@+id/sendNotify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手动发送推送测试图标" />

                <Button
                    android:id="@+id/showTogDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testPay切换" />

                <Button
                    android:id="@+id/showSocialBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社群banner" />
                <Button
                    android:id="@+id/showActExpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动曝光" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/open_float_btn"
                    android:text="显示悬浮按钮open" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
